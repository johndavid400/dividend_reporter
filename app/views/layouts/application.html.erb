<!DOCTYPE html>
<html>
  <head>
    <title>Tutorial</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <div id="nav">
      <center>
        <% if current_user %>
          <%= link_to "Edit User", edit_user_path(current_user.id) %> |
          <%= link_to "Logout", :logout %>
        <% else %>
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", :login %>
        <% end %>
      </div>
      <div>
        <p id="notice"><%= notice %></p>
        <p id="alert"><%= alert %></p>
      </div>
    </center>

    <%= yield %>

  </body>
</html>

