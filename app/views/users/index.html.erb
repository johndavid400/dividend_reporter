<h1>Listing users</h1>


<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <% if current_user.has_role?(:admin) %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

  <% @users.each do |user| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td><%= link_to user.username, user %></td>
      <td><%= user.email %></td>

      <% if current_user.has_role?(:admin) %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>

    </tr>
  <% end %>
</table>

