<h2>My Stocks</h2>
<h4>Stocks that <%= @user.username %> is watching </h4>

<b>Username:</b>
<%= @user.username %>
<b>Email:</b>
<%= @user.email %>


<table>
  <tr>
    <th>Symbol</th>
    <th>Stock Name</th>
    <th>Last Price</th>
    <th>Dividend/Share</th>
    <th>Pay Date</th>
    <th>Unwatch</th>
  </tr>

  <% @stocks.each do |stock| %>
    <tr>
      <td><%= link_to @quotes[stock.symbol.upcase].symbol, stock %></td>
      <td><%= @quotes[stock.symbol.upcase].name %></td>
      <td><%= @quotes[stock.symbol.upcase].lastTrade %></td>
      <td><%= @quotes_ext[stock.symbol.upcase].dividendPerShare %></td>
      <td><%= @quotes_ext[stock.symbol.upcase].exDividendDate %></td>
      <td><%= link_to 'Remove', stocks_unwatch_path(stock) %></td>
    </tr>
  <% end %>
</table>

<br />


<h2><%= current_user %> is logged in.</h2>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'View all Stocks', stocks_path %>
